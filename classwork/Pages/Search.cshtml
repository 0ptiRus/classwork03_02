@page
@model classwork.Pages.SearchModel
@{
}

<form method="post">
    <div class="form-group">
        <label for="title">Название:</label>
        <input type="text" id="title" name="title" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label for="studio">Студия:</label>
        <input type="text" id="studio" name="studio" value="@Model.Studio" />
    </div>
    <div class="form-group">
        <label for="genre">Жанр:</label>
        <select id="genre" name="genre">
            <option value="">Все жанры</option>
            <option value="Action RPG">Action RPG</option>
            <option value="RPG">RPG</option>
            <option value="FPS">FPS</option>
            <option value="Action Adventure">Action Adventure</option>
            <option value="Sandbox">Sandbox</option>
        </select>
    </div>
    <div class="form-group">
        <label for="year">Год выпуска:</label>
        <input type="number" id="year" name="year" min="1900" max="2100" value="@Model.Year" />
    </div>
    <button type="submit" class="btn btn-primary">Найти</button>
</form>

@if (Model.Games != null && Model.Games.Any())
{
    <h2>Результаты поиска</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Студия</th>
                <th>Жанр</th>
                <th>Дата выхода</th>
                <th>Продажи</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model.Games)
            {
                <tr>
                    <td>@game.Title</td>
                    <td>@game.Studio</td>
                    <td>@game.Genre</td>
                    <td>@game.ReleaseDate.ToString("d")</td>
                    <td>@game.SalesCount</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model.Submitted)
{
    <p>По вашему запросу ничего не найдено.</p>
}