@page
@using classwork.Services
@model classwork.Pages.StatisticsModel
@{
}
@inject GameService service;
<h1>Статистика игр</h1>


<div class="row">
    <div class="col-md-6">
        <h2>Топ-3 самых продаваемых игр</h2>
        <ol>
            @foreach (var game in await service.Get3MostSold())
            {
                <li>@game.Title - @game.SalesCount</li>
            }
        </ol>
    </div>
    <div class="col-md-6">
        <h2>Топ-3 наименее продаваемых игр</h2>
        <ol>
            @foreach (var game in await service.Get3LeastSold())
            {
                <li>@game.Title - @game.SalesCount</li>
            }
        </ol>
    </div>
</div>